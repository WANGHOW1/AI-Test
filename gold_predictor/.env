# Gold Price Prediction Application Configuration

# API Configuration
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
NEWS_API_KEY=your_news_api_key_here

# API Rate Limits (calls per day)
ALPHA_VANTAGE_DAILY_LIMIT=25
NEWS_API_DAILY_LIMIT=1000

# Update Intervals (in seconds)
PRICE_UPDATE_INTERVAL=300      # 5 minutes (288 calls/day with yfinance)
PREDICTION_UPDATE_INTERVAL=1800 # 30 minutes (48 calls/day)
NEWS_UPDATE_INTERVAL=3600      # 1 hour (24 calls/day)
ECONOMIC_UPDATE_INTERVAL=21600  # 6 hours (4 calls/day with Alpha Vantage)

# Data Storage
DATABASE_PATH=data_store/gold_data.db
LOG_LEVEL=INFO
MAX_LOG_FILES=7

# Model Parameters
PREDICTION_TIMEFRAMES=60,240,1440  # 1hr, 4hr, 1day in minutes
MODEL_RETRAIN_INTERVAL=86400       # 24 hours
HISTORICAL_DATA_DAYS=365           # 1 year of historical data

# Alert Thresholds
PRICE_CHANGE_ALERT_PERCENT=2.0     # Alert on 2% price change
PREDICTION_CONFIDENCE_MIN=0.7      # Minimum confidence for alerts
